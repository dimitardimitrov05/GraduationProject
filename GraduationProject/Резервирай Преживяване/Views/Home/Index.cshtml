@model Резервирай_Преживяване.Models.ReservationViewModels.ReservationViewModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Резервирай Преживяване</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/css/style.css" rel="stylesheet">
</head>

<body>
    <form>
        <div class="bg-white p-0">
            <div class="container-fluid p-0 mb-5">
                <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="w-100" style="height: 700px;" src="~/img/sedemte rilski ezera.jpeg" alt="Image">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 700px;">
                                    <p class="display-3 text-white mb-4 animated slideInDown">Резервирай мечтаната почивка</p>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="w-100" style="height: 700px;" src="~/img/rilski manastir.jpg" alt="Image">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 700px;">
                                    <p class="display-3 text-white mb-4 animated slideInDown">Опознай красотата на България</p>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="w-100" style="height: 700px;" src="~/img/belogradchishski skali.jpg" alt="Image">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 700px;">
                                    <h1 class="display-3 text-white mb-4 animated slideInDown">Превърни пътуването в хоби</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel"
                            data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#header-carousel"
                            data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>

            <div class="container-fluid booking pb-5 wow fadeIn" data-wow-delay="0.1s">
                <div class="container">
                    <div class="bg-white shadow" style="padding: 15px;">
                        <div class="row g-2">
                            <div class="col-md-10">
                                <div class="row g-2">
                                    <div class="col-md-3">
                                        <div class="date" id="date1" data-target-input="nearest">
                                            <label class="form-label" style="padding-top: -20px!important">Дата на настаняване</label>
                                            <input type="date" asp-for="CheckIn" class="form-control" placeholder="Дата на настаняване" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="date" id="date2" data-target-input="nearest">
                                            <label class="form-label">Дата на настаняване</label>
                                            <input type="date" asp-for="CheckOut" class="form-control" placeholder="Дата на напускане" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">Локация</label>
                                        <input type="text" asp-for="Location" class="form-control" placeholder="На къде" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">Брой гости</label>
                                        <input type="text" asp-for="Guests" class="form-control" placeholder="Гости" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <button class="btn btn-primary w-100" asp-controller="Resorts" asp-action="ResortsByLocation" style="margin-top: 32px">Търсене</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container-xxl py-5">
                <div class="container">
                    <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                        <h1 class="mb-5">Популярни <span class="text-primary text-uppercase">Дестинации</span></h1>
                    </div>
                    <div class="row g-4">
                        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="room-item shadow rounded overflow-hidden">
                                <div class="position-relative">
                                    <img class="img-fluid" src="~/img/sofia.jpg" style="height:300px; width:412px;" alt="">
                                </div>
                                <div class="p-4 mt-2">
                                    <div class="d-flex justify-content-between mb-3">
                                        <h4 class="mb-0">София</h4>
                                    </div>
                                    <p class="text-body mb-3">Столицата на България е известна със своята богата история и разнообразни архитектурни забележителности. София е подходяща за изследване на природата в близките планини и туристически атракции.</p>
                                    <div class="d-flex justify-content-between">
                                        <a class="btn btn-sm btn-primary rounded py-2 px-4" href="">Виж още</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                            <div class="room-item shadow rounded overflow-hidden">
                                <div class="position-relative">
                                    <img class="img-fluid" src="~/img/sozopol.jpg" style="height:300px; width:412px;" alt="">
                                </div>
                                <div class="p-4 mt-2">
                                    <div class="d-flex justify-content-between mb-3">
                                        <h4 class="mb-0">Созопол</h4>
                                    </div>
                                    <p class="text-body mb-3">Созопол привлича посетители със своята уникална архитектура. Известен още с прекрасните си плажове, исторически забележителности и възможности за релаксация и развлечения на брега на морето.</p>
                                    <div class="d-flex justify-content-between">
                                        <a class="btn btn-sm btn-primary rounded py-2 px-4" href="">Виж още</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.6s">
                            <div class="room-item shadow rounded overflow-hidden">
                                <div class="position-relative">
                                    <img class="img-fluid" src="~/img/bansko.jpg" style="height:300px; width:412px;" alt="">
                                </div>
                                <div class="p-4 mt-2">
                                    <div class="d-flex justify-content-between mb-3">
                                        <h4 class="mb-0">Банско</h4>
                                    </div>
                                    <p class="text-body mb-3">Банско е курортен град, известен с красивата природа и разнообразните възможности за зимни спортове в планината Пирин. Той е любима дестинация за скиори и сноубордисти от цял ​​свят.</p>
                                    <div class="d-flex justify-content-between">
                                        <a class="btn btn-sm btn-primary rounded py-2 px-4" href="">Виж още</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container-xxl py-5" style="margin-bottom:50px">
                <div class="container">
                    <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                        <h1 class="mb-5">Едни от най-красивите места в <span class="text-primary text-uppercase">България</span></h1>
                    </div>
                    <div class="row g-4">
                        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                            <a class="service-item rounded" href="" style="background-image: url('../img/chudnite mostove.jpg');background-size: cover;">
                                <h5 class="mb-3"></h5>
                                <p class="text-body mb-0"></p>
                            </a>
                        </div>
                        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.2s">
                            <a class="service-item rounded" href="" style="background-image: url('../img/krepost ovech.jpg');background-size: cover;">
                                <h5 class="mb-3"></h5>
                                <p class="text-body mb-0"></p>
                            </a>
                        </div>
                        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                            <a class="service-item rounded" href="" style="background-image: url('../img/tyulenovo.jpg');background-size: cover;">
                                <h5 class="mb-3"></h5>
                                <p class="text-body mb-0"></p>
                            </a>
                        </div>
                        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.4s">
                            <a class="service-item rounded" href="" style="background-image: url('../img/ezero dobronishte.jpg');background-size: cover;">
                                <h5 class="mb-3"></h5>
                                <p class="text-body mb-0"></p>
                            </a>
                        </div>
                        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                            <a class="service-item rounded" href="" style="background-image: url('../img/veliko tarnovo.jpg');background-size: cover;">
                                <h5 class="mb-3"></h5>
                                <p class="text-body mb-0"></p>
                            </a>
                        </div>
                        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.6s">
                            <a class="service-item rounded" href="" style="background-image: url('../img/krushunski vodopadi.jpg');background-size: cover;">
                                <h5 class="mb-3"></h5>
                                <p class="text-body mb-0"></p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="lib/wow/wow.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/waypoints/waypoints.min.js"></script>
    <script src="lib/counterup/counterup.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="lib/tempusdominus/js/moment.min.js"></script>
    <script src="lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>
</body>

</html>
