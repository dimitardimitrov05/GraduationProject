@using Microsoft.AspNetCore.Identity
@using Резервирай_Преживяване.Data.Account;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<div class="nav-item dropdown">
    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Моят Профил</a>
    <div class="dropdown-menu rounded-0 m-0">
        @if (SignInManager.IsSignedIn(User))
        {
            <a class="dropdown-item text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Здравей @User.Identity?.Name!</a>
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="dropdown-item text-dark">Изход</button>
            </form>
        }
        else
        {
            <a class="dropdown-item text-dark" asp-controller="Account" asp-action="Register">Регистрация</a>
            <a class="dropdown-item text-dark" asp-controller="Account" asp-action="Login">Вход</a>
        }
    </div>
</div>